# Fail2Ban Web Interface - Security Rules

# Deny access to configuration files
<FilesMatch "^(config\.json|config\.example\.json)$">
    Require all denied
</FilesMatch>

# Deny access to all .inc.php files (include files)
<FilesMatch "\.inc\.php$">
    Require all denied
</FilesMatch>

# Deny access to composer files
<FilesMatch "^(composer\.json|composer\.lock)$">
    Require all denied
</FilesMatch>

# Deny access to git files
<FilesMatch "^\.git">
    Require all denied
</FilesMatch>

# Deny access to documentation files (optional - remove if you want them accessible)
<FilesMatch "^(README\.md|SECURITY\.md|CLAUDE\.md|database\.sql)$">
    Require all denied
</FilesMatch>

# Deny access to vendor directory
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^vendor/ - [F,L]
</IfModule>

# Deny access to backup files
<FilesMatch "\.(bak|backup|old|orig|save|~)$">
    Require all denied
</FilesMatch>

# Deny access to log files
<FilesMatch "\.log$">
    Require all denied
</FilesMatch>

